{
    "compilerOptions": {
        "target": "es2018",
        "module": "commonjs",
        "moduleResolution": "node",
        "lib": [
            "ESNext",
            "ESNext.AsyncIterable",
            "DOM"
        ],
        "strictPropertyInitialization": false,
        "esModuleInterop": true,
        "allowJs": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "allowUnreachableCode": false,
        "noEmit": true,
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "./*"
            ],
            "@/*": [
                "./*"
            ],
            "@img/*": [
                "./public/img/*"
            ]
        },
        "types": [
            "@types/node",
            "@nuxt/types",
            "nuxt-i18n"
        ]
    },
    "include": [
        "./**/*.ts",
        "./**/*.vue"
    ],
    "exclude": [
        "node_modules"
    ]
}
